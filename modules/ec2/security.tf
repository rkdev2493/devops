resource "aws_security_group" "ec2_sg" {
  name        = "ec2-cloudwatch-sg-${terraform.workspace}"
  description = "Allow SSH and CloudWatch Agent traffic"
  vpc_id      = var.vpc_id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
    description = "Allow SSH"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
